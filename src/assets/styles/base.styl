*
  box-sizing border-box
  font-family inherit

:focus
  outline none

::-moz-focus-inner
  border none

::placeholder
  color #fff

html, body
  min-height 100%
  height 100%

html
  font 400 16px/1.5 'Roboto', 'Helvetica', 'Arial', sans-serif
  @media (max-width 768px)
    font-size 14px

body
  margin 0
  padding 0
  color #363636
  background #fff

img
  max-width 100%
  vertical-align bottom

hr
  border-top 0
  border-color #8c8c8c

a
  color inherit
  cursor default
  &[href]
    cursor pointer

p
  margin-top .5rem
  margin-bottom .5rem

//ul
//  margin 0
//  padding 0
//  list-style-position inside

table
  border-spacing 0
  border-collapse collapse

textarea
  resize none

address
  font-style normal

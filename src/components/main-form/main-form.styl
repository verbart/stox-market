.mainForm
  display flex
  flex-direction column
  align-items center
  &__caption
    margin-top 0
    margin-bottom 1.5rem
    text-shadow 0.188rem 0.25rem 0.625rem rgba(0, 4, 2, 0.94)
    color #ffba00
    font-size 2.25rem
    font-weight 700
    line-height 3rem
    text-transform uppercase
    text-align center
  &__form
    max-width 20rem
    width 100%
    text-shadow 0 0.063rem 0.188rem #000402
    color #fff
    font-size 0.875rem
    font-weight 400
    line-height 1.125rem
    &:after
      content ''
      align-self flex-start
      display block
      width 7.438rem
      height 4.563rem
      margin-left 3rem
      margin-top 1rem
      background url(/images/arrow-form.png) center / cover

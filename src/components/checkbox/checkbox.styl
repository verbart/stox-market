.checkbox
  display inline-flex
  &__input
    display none
    ~ .checkbox__icon
      position relative
      display inline-block
      width 1.25rem
      height @width
      box-shadow inset .063rem .063rem 0.188rem rgba(0, 4, 2, .77)
      border .063rem solid #c3c3c3
      border-radius 4px
      background-color #ffffff
      cursor pointer
      transition .2s
      &:before
        content ''
        position absolute
        top 1px
        bottom 1px
        left 1px
        right 1px
        //border-radius 50%
        border-radius 4px
    &:checked
      ~ .checkbox__icon
        box-shadow none
        &:before
          background #606060
  &__icon label
    cursor pointer
  &__label
    padding-left 6px
    line-height 1.2

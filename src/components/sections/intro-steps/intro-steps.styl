.introSteps
  position relative
  padding-top 2rem
  &:after
    content ''
    display block
    position absolute
    left 0
    right 0
    top 100%
    min-height 50px
    max-height 100px
    height 6vw
    background:
      linear-gradient(to top right, transparent, transparent 49.6%, #fff 50.4%, #fff) 0 0,
      linear-gradient(to top left, transparent, transparent 49.6%, #fff 50.4%, #fff) 100% 0
    background-repeat no-repeat
    background-size 50% 100%
  &__headerHighliter
    vertical-align middle
    font-size 3.75rem

.introStep
  padding-top 2rem
  &__preview
    position relative
    img
      position absolute
      top 50%
      left 50%
      transform translate(-50%, -50%)
  &__number
    position absolute
    width 3.75rem
    height @width
    bottom 0
    right 0
    transform translateX(50%)
    display inline-flex
    align-items center
    justify-content center
    color #fff
    border-radius 50%
    font-size 2.25rem
    font-weight 500
    text-transform uppercase
  &_orange
    .introStep
      &__number
        background color_orange
      &__caption
        color color_orange
  &_blue
    .introStep
      &__number
        background color_blue
      &__caption
        color color_blue
  &_green
    .introStep
      &__number
        background color_green
      &__caption
        color color_green

  &:not(:nth-child(3n)):not(:last-child)
    .introStep__preview:after
      content ''
      display block
      position absolute
      right -100%
      top 50%
      transform translateY(-50%)
      width 100%
      height 3rem
      background url(/images/arrow-to-step.png) center / 100% auto no-repeat
      @media(max-width 992px)
        display none
    &:nth-child(2n)
      .introStep__preview:after
          transform @transform scale(1, -1)

.form
  &__group
    position relative
    display flex
    height 2.125rem
    cursor pointer
    box-shadow inset 0.063rem 0.063rem 0.063rem rgba(0, 4, 2, 0.75)
    &:before
      content ''
      position absolute
      top 1px
      right 1px
      bottom 1px
      left 1px
      background #fff
    &_block
      width 100%
  &__input
    position relative
    width 100%
    padding 0 10px
    box-shadow none
    outline none
    color #606060
    font-size 0.813rem
    font-weight 400
    border none
    background none
    overflow hidden
    text-overflow ellipsis
    white-space nowrap
    cursor text
    transition .2s
    &::placeholder
      font-size 0.813rem
      font-weight 400
      opacity 1
      color #b9b9b9
  &__message
    margin-top -15px
    margin-bottom 15px
    font-size .95rem
    &_error
      color #ea4b35
